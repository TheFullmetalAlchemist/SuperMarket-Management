@model SuperMarket_Management.Models.Category

@section title {
    @if (Model != null)
    {
        <h3>Edit Category: @Model.Name</h3>
    }
}

@if (Model != null)
{
    <form asp-controller="Categories" asp-action="Edit" asp-route-id="@Model.CategoryId" method="post">
        <input type="hidden" asp-for="CategoryId" />

        <div class="text-danger" asp-validation-summary="All"></div>

        <div class="row mb-3">
            <div class="col-2">
                <label asp-for="Name" class="col-form-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="Name" class="form-control" />
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-2">
                <label asp-for="Description" class="col-form-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="Description" class="form-control" />
                <span class="text-danger" asp-validation-for="Description"></span>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-2">
                <input type="submit" class="btn btn-primary" value="Save" />
            </div>
        </div>
    </form>
}